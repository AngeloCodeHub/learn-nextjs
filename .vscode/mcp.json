{
	"servers": {
		"postgres": {
			"command": "npx",
			"args": [
				"-y",
				"@modelcontextprotocol/server-postgres",
				"${input:pg_url}"
			],
			"type": "stdio"
		}
	},
	"inputs": [
		{
			"type": "promptString",
			"id": "pg_url",
			"description": "PostgreSQL URL (e.g. postgresql://user:pass@localhost:5432/mydb)"
		}
	]
}